<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_key_account"
        android:title="@string/prefcat_account_title">

        <Preference
            android:key="pref_key_logout"
            android:summary="@string/logout_pref_summary"
            android:title="@string/logout_pref_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_behavior"
        android:title="@string/prefcat_behavior_title">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_key_animations"
            android:summary="@string/animations_pref_summary"
            android:title="@string/animations_pref_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_key_heads_up_notifications"
            android:summary="@string/heads_up_notifications_pref_summary"
            android:title="@string/heads_up_notifications_pref_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_key_stream_service"
            android:summary="@string/enable_stream_service_pref_summary"
            android:title="@string/enable_stream_service_pref_title"/>

    </PreferenceCategory>

</PreferenceScreen>
