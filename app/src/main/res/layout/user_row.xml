<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/userProfilePicImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/profile_pic_contentDescriptor"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_twitter_blue" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userProfilePicImageView"
        android:layout_toEndOf="@+id/userProfilePicImageView"
        android:layout_toRightOf="@+id/userProfilePicImageView"
        android:text="Andrea Pivetta"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screenNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userNameTextView"
        android:layout_alignStart="@+id/userNameTextView"
        android:layout_below="@+id/userNameTextView"
        android:fontFamily="sans-serif-thin"
        android:text="\@Pivix00"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/screenNameTextView"
        android:layout_alignStart="@+id/screenNameTextView"
        android:layout_below="@+id/screenNameTextView"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:text="Bla bla bla bla bla bla blablabla bla blabla bla. Bla bla bla bla bla bla blablabla bla blabla bla"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/followImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circle_button_white"
        android:contentDescription="@string/follow_user_contentDescription"
        android:src="@drawable/ic_person_add_grey600_24dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/descriptionTextView"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>