<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andreapivetta.blu.activities.UserProfileActivity">

    <ImageView
        android:id="@+id/profileBackgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profileBackgroundHeight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/profile_background_contentDescriptor"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <ScrollView
        android:id="@+id/profileScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <View
                android:id="@+id/transparentView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profileBackgroundHeight" />

            <RelativeLayout
                android:id="@+id/containerRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/transparentView"
                android:background="@color/white">

                <TextView
                    android:id="@+id/userNickTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userNickTextView"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="-3dp"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textIsSelectable="false"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userNameTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descriptionTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userLocationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/userWebsiteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:autoLink="web"
                        android:gravity="center_horizontal" />

                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/linearLayout"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/amountLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tweetAmountTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="4dp"
                        android:singleLine="false"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/followingAmountTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="4dp"
                        android:singleLine="false"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/followersAmountTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="4dp"
                        android:singleLine="false"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/amountLinearLayout"
                    android:background="@android:color/darker_gray" />

            </RelativeLayout>

            <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userProfilePicImageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/transparentView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-80dp"
                android:scaleType="centerCrop"
                app:riv_oval="true" />

            <LinearLayout
                android:id="@+id/tweetsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/containerRelativeLayout"
                android:background="@color/background"
                android:minHeight="250dp"
                android:orientation="vertical">

                <ViewStub
                    android:id="@+id/firstViewStub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/profileTweetsMargins"
                    android:layout_marginRight="@dimen/profileTweetsMargins"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="6dp"/>

                <ViewStub
                    android:id="@+id/secondViewStub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/profileTweetsMargins"
                    android:layout_marginRight="@dimen/profileTweetsMargins"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"/>

                <ViewStub
                    android:id="@+id/thirdViewStub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="@dimen/profileTweetsMargins"
                    android:layout_marginRight="@dimen/profileTweetsMargins"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/isHeFollowingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tweetsLinearLayout"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/followTweetLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isHeFollowingTextView"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/followButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_button"
                    android:text="@string/follow_user"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/tweetButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_button"
                    android:text="@string/tweet"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

</RelativeLayout>