<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@string/video_preview_contentDescription"
        android:id="@+id/tweetVideoImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:contentDescription="@string/play_video_contentDescription"
        android:id="@+id/playVideoImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="?attr/circleButton"
        android:src="@drawable/ic_play_arrow_white_24dp" />

</FrameLayout>